@model Lingva.ViewModels.LoginViewModel

@{ 
    Layout = null;
    string errors = ViewBag.ErrorMessage;
}

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="../../css/Registration/auth_window.css" asp-append-version="true">
    <title> Lingva: Create Account</title>
</head>
<body>
    <div class="auth">
        <form method="post" class="window" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <h2 class="main">Вход</h2>
            <p class="enter_link">Впервые в Lingva? <a href="~/Account/Register">Создать аккаунт!</a></p>
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label class="field" asp-for="Email"></label><br />
                <input class="Angaben" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label class="field" asp-for="Password"></label><br />
                <input class="Angaben" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />
            </div>
            <div>
                <input class="button_push" type="submit" value="Войти" />
            </div>
        </form>
    </div>
</body>
</html>