@model Lingva.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Home Page";
    string errors = ViewBag.ErrorMessage;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="../../css/Registration/registration_window.css" asp-append-version="true">
    <title> Lingva: Create Account</title>
</head>
<body>
    <div class="auth">
        <form method="post" asp-controller="Account" asp-action="Login" class="window">
            <div asp-validation-summary="ModelOnly"></div>
            <h1 class="main">ВХОД</h1>
            <p class="enter_link">Ещё нет аккаунта?<a href="#">Присоединяйся!</a></p>
            <div class="field">
                <label asp-for="Email"></label><br />
                <input class="Angaben" asp-for="Email" />
            </div>
            <div class="field">
                <label asp-for="Password"></label><br />
                <input class="Angaben" asp-for="Password"/>

            </div>
            <div class="field">
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" type="checkbox" />
            </div>
            <div>
                <input class="button_push" type="submit" value="ВХОД" />
            </div>
            <div class="errors">
                <div><span asp-validation-for="Email"></span></div>
                <div><span asp-validation-for="Password"></span></div>
                @errors
            </div>


        </form>
    </div>
</body>
</html>